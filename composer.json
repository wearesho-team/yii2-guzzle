{
  "name": "wearesho-team/yii2-guzzle",
  "description": "Container configuration with requests logs for Yii2",
  "type": "library",
  "require": {
    "php": ">=7.2",
    "guzzlehttp/guzzle": "^6.3",
    "horat1us/yii2-base": "^1.14",
    "nesbot/carbon": "^1.30",
    "yiisoft/yii2": "^2.0.15"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^2.6",
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "^3.3",
    "vlucas/phpdotenv": "^2.5",
    "yiisoft/yii2-phpunit": "dev-master"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "repositories": [
    {
      "type": "vcs",
      "url": "git@github.com:Horat1us/yii2-phpunit.git"
    }
  ],
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.2"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  },
  "autoload": {
    "psr-4": {
      "Wearesho\\Yii\\Guzzle\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Yii\\Guzzle\\Tests\\": "tests/"
    }
  }
}
